---
import { getLanguageFromURL } from '../../languages';
import { SIDEBAR } from '../../config';

type Props = {
	currentPage: string;
};

const { currentPage } = Astro.props as Props;
const currentPageMatch = currentPage.endsWith('/')
	? currentPage.slice(1, -1)
	: currentPage.slice(1);
const langCode = getLanguageFromURL(currentPage);
const sidebar = SIDEBAR[langCode];
---

<nav aria-labelledby="grid-left">
	<ul class="nav-groups">
		{Object.entries(sidebar).map(([header, children], index) => {
			const isCurrentSection = children.some(child => currentPageMatch === child.link);
			const sectionId = `nav-section-${index}`;
			return (
				<li>
					<div class="nav-group">
						<button
							class="nav-group-header"
							aria-expanded={isCurrentSection ? "true" : "false"}
							aria-controls={sectionId}
							data-section={index}
						>
							<span class="nav-group-title">{header}</span>
							<svg class="nav-group-chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<polyline points="6 9 12 15 18 9"></polyline>
							</svg>
						</button>
						<ul id={sectionId} class={isCurrentSection ? "" : "collapsed"}>
							{children.map((child) => {
								const url = Astro.site?.pathname + child.link;
								return (
									<li class="nav-link">
										<a href={url} aria-current={currentPageMatch === child.link ? 'page' : false}>
											{child.text}
										</a>
									</li>
								);
							})}
						</ul>
					</div>
				</li>
			);
		})}
	</ul>
</nav>

<script is:inline>
	window.addEventListener('DOMContentLoaded', () => {
		// Scroll to current page
		var target = document.querySelector('[aria-current="page"]');
		if (target && target.offsetTop > window.innerHeight - 100) {
			document.querySelector('.nav-groups').scrollTop = target.offsetTop;
		}

		// Load saved collapsed state from localStorage
		const savedState = localStorage.getItem('sidebar-collapsed');
		const collapsedSections = savedState ? JSON.parse(savedState) : {};

		// Apply saved state (but keep current section expanded)
		document.querySelectorAll('.nav-group-header').forEach((button) => {
			const section = button.getAttribute('data-section');
			const list = button.nextElementSibling;
			const hasCurrentPage = list.querySelector('[aria-current="page"]');

			// If this section has the current page, always expand it
			if (hasCurrentPage) {
				button.setAttribute('aria-expanded', 'true');
				list.classList.remove('collapsed');
			} else if (collapsedSections[section] !== undefined) {
				// Apply saved state
				const isExpanded = !collapsedSections[section];
				button.setAttribute('aria-expanded', isExpanded ? 'true' : 'false');
				if (collapsedSections[section]) {
					list.classList.add('collapsed');
				} else {
					list.classList.remove('collapsed');
				}
			}
		});

		// Add click handlers
		document.querySelectorAll('.nav-group-header').forEach((button) => {
			button.addEventListener('click', () => {
				const section = button.getAttribute('data-section');
				const list = button.nextElementSibling;
				const isExpanded = button.getAttribute('aria-expanded') === 'true';

				// Toggle state
				button.setAttribute('aria-expanded', isExpanded ? 'false' : 'true');
				list.classList.toggle('collapsed');

				// Save state to localStorage
				const savedState = localStorage.getItem('sidebar-collapsed');
				const collapsedSections = savedState ? JSON.parse(savedState) : {};
				collapsedSections[section] = isExpanded; // Save opposite of current (new state)
				localStorage.setItem('sidebar-collapsed', JSON.stringify(collapsedSections));
			});
		});
	});
</script>

<style>
	nav {
		width: 100%;
		margin-right: 1rem;
	}

	.nav-groups {
		height: 100%;
		padding: 1.5rem 0;
		overflow-x: visible;
		overflow-y: auto;
		max-height: 100vh;
	}

	.nav-groups > li + li {
		margin-top: 0.5rem;
	}

	.nav-groups > :first-child {
		padding-top: var(--doc-padding);
	}

	.nav-groups > :last-child {
		padding-bottom: 2rem;
		margin-bottom: var(--theme-navbar-height);
	}

	.nav-group-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		font-size: 0.8rem;
		font-weight: 700;
		padding: 0.5rem 1rem 0.35rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--theme-text);
		margin-bottom: 0.15rem;
		border: none;
		border-bottom: 1px solid var(--theme-divider);
		background: transparent;
		cursor: pointer;
		text-align: left;
		margin-left: 0.5rem;
		margin-right: 0.5rem;
		padding-left: 0.5rem;
		transition: color 0.15s ease;
	}

	.nav-group-header:hover {
		color: var(--theme-text-accent);
	}

	.nav-group-title {
		flex: 1;
	}

	.nav-group-chevron {
		flex-shrink: 0;
		transition: transform 0.2s ease;
	}

	.nav-group-header[aria-expanded="false"] .nav-group-chevron {
		transform: rotate(-90deg);
	}

	.nav-group ul {
		overflow: hidden;
		transition: max-height 0.25s ease-out, opacity 0.2s ease-out;
		max-height: 1000px;
		opacity: 1;
	}

	.nav-group ul.collapsed {
		max-height: 0;
		opacity: 0;
	}

	.nav-link a {
		font-size: 0.9rem;
		margin: 0;
		padding: 0.35rem 1rem;
		font: inherit;
		color: var(--theme-text-light);
		text-decoration: none;
		display: block;
		border-radius: 6px;
		transition: all 0.15s ease;
	}

	.nav-link a:hover,
	.nav-link a:focus {
		color: var(--theme-text);
		background-color: var(--theme-bg-hover);
	}

	.nav-link a[aria-current='page'] {
		color: var(--theme-text-accent);
		background-color: var(--theme-bg-accent);
		font-weight: 600;
	}

	@media (min-width: 50em) {
		.nav-groups {
			padding: 0;
		}
	}
</style>

<style is:global>
	:root.theme-dark .nav-link a[aria-current='page'] {
		color: hsla(var(--color-base-white), 100%, 1);
	}
</style>
